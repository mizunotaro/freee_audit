# Database
DATABASE_URL="file:./dev.db"

# Application
NEXT_PUBLIC_APP_NAME="freee_audit"
NEXTAUTH_SECRET="your-secret-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"
NODE_ENV="development"

# Authentication
JWT_SECRET="your-jwt-secret-key-change-in-production"
BCRYPT_ROUNDS="12"

# freee API
FREEE_CLIENT_ID="your-freee-client-id"
FREEE_CLIENT_SECRET="your-freee-client-secret"
FREEE_REDIRECT_URI="http://localhost:3000/api/freee/callback"
FREEE_MOCK_MODE="true"

# AI Provider (choose one: openai, gemini, claude)
AI_PROVIDER=openai

# AI APIs (choose one or more)
OPENAI_API_KEY=""
OPENAI_MODEL=gpt-4o
GEMINI_API_KEY=""
GEMINI_MODEL=gemini-1.5-pro
ANTHROPIC_API_KEY=""
CLAUDE_MODEL=claude-sonnet-4-20250514

# Slack (optional)
SLACK_BOT_TOKEN=""
SLACK_CHANNEL_ID=""

# Box (production only)
BOX_CLIENT_ID=""
BOX_CLIENT_SECRET=""
BOX_ENTERPRISE_ID=""

# Encryption (32-byte hex string for AES-256)
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="60000"

# CSRF
CSRF_SECRET="your-csrf-secret-key-change-in-production"

# Logging
LOG_LEVEL="debug"
